{
    "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on",
                "useSortedAttributes": "on"
            }
        }
    },
    "files": {
        "includes": [
            "**",
            "!**/loader",
            "!**/package.json",
            "!**/package-lock.json",
            "!**/dist",
            "!**/www",
            "!**/src/components.d.ts",
            "!**/src/components/p-icon/icons.ts"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "noStaticElementInteractions": "off",
                "useKeyWithClickEvents": "off"
            },
            "style": {
                "noUnusedTemplateLiteral": "off",
                "noInferrableTypes": "off"
            }
        }
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 140,
        "expand": "always"
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single"
        }
    }
}
