{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": [
            "storybook-static/",
            "loader/",
            "package.json",
            "package-lock.json",
            "dist/",
            "www",
            "src/components.d.ts"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noUnusedTemplateLiteral": "off",
                "noInferrableTypes": "off"
            },
            "correctness": {
                "noUnusedImports": "error"
            }
        }
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single"
        }
    }
}
